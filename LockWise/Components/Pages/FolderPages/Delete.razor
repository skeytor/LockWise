@page "/folders/delete"
@using Microsoft.EntityFrameworkCore
@using LockWise.Data.Models
@inject IDbContextFactory<LockWise.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Folder</h2>
    <hr />
    @if (folder is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@folder.Name</dd>
        </dl>
        <EditForm method="post" Model="folder" OnValidSubmit="DeleteFolder" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(folder is null)">Delete</button> |
            <a href="/folders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Folder? folder;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        folder = await context.Folder.FirstOrDefaultAsync(m => m.Id == Id);

        if (folder is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFolder()
    {
        using var context = DbFactory.CreateDbContext();
        context.Folder.Remove(folder!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/folders");
    }
}
